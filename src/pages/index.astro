---
// componet layouts
import BaseLayout from "@layouts/BaseLayout.astro";
import Button from "@components/Button.astro";

// layout imports
import Section from "@layouts/SectionWrapper.astro";
import SectionTitle from "@layouts/SectionTitle.astro";

// data imports
import galleryImgs from "@data/galleryImgs.js";

const imgData = {
  URL: "/profile.jpg",
  Alt: "Profile picture",
};

const images = [
  {
    title: "Cement work",
    src: "/cement.jpg",
    alt: "Cement work",
    body: "lorem lore lorem lorem jfasdp fsdfjasd;fj;asdf",
  },
  {
    title: "Wood work",
    src: "/woodwork.jpg",
    alt: "Wood work",
    body: "lorem lore lorem lorem jfasdp fsdfjasd;fj;asdf",
  },
  {
    title: "Roofing",
    src: "/roofing.jpg",
    alt: "Roofing",
    body: "lorem lore lorem lorem jfasdp fsdfjasd;fj;asdf",
  },
];
---

<BaseLayout>
  <!-- hero -->
  <main class="bg-hero bg-center bg-no-repeat bg-cover h-screen">
    <div class="grid place-items-center w-full h-full bg-black bg-opacity-80">
      <section class="text-white text-center">
        <h1 class="text-4xl tracking-tight leading-snug">
          Premier Contracting
        </h1>
        <div class="px-2">
          <h3 class="text-lg tracking-tight leading-tight">
            Building your dream home, a <span class="text-yellow-400">fast</span
            > as
            <span class="text-yellow-400">possible</span>.
          </h3>
        </div>
        <div class="my-4">
          <button
            class="py-2 px-4 underline border border-white backdrop-blur-lg rounded hover:bg-neutral-800"
            >View Projects</button
          >
          <button
            class="py-2 px-3 text-gray-700 bg-yellow-400 rounded shadow-lg hover:bg-yellow-500 hover:text-gray-950"
            >Get a quote</button
          >
        </div>
      </section>
    </div>
  </main>

  <!-- About -->
  <Section>
    <div class="text-gray-950 py-8">
      <section class="grid md:grid-cols-2 gap-8">
        <div class="grid place-items-center">
          <img src={imgData.URL} alt={imgData.Alt} class="hidden md:block" />
        </div>
        <div class="flex flex-col justify-evenly gap-8 px-12">
          <div class="md:w-fit md:mx-auto">
            <SectionTitle title="Who we are" />
          </div>
          <p class="text-md font-light">
            Lorem Ipsum is simply dummy text of the printing and typesetting
            industry. Lorem Ipsum has been the industry's standard dummy text
            ever since the 1500s, when an unknown printer took a galley of type
            and scrambled it to make a type specimen book.
          </p>

          <button
            class="rounded bg-yellow-400 text-gray-950 hover:bg-yellow-500 w-44 px-8 py-2"
            >Get in touch</button
          >
        </div>
      </section>
    </div>
  </Section>

  <!-- Services -->
  <Section bgClr="bg-gray-800" textClr="text-white">
    <div class="w-fit mx-auto mb-8">
      <SectionTitle title="What we do" />
    </div>

    <div class="grid md:grid-cols-3 gap-4 place-items-center">
      {
        images.map((image) => (
          <div class="md:max-w-lg sm:max-w-xs mx-auto">
            <div class="grid place-items-center">
              <img
                src={image.src}
                alt={image.alt}
                class="rounded-full w-52 h-52 shadow-xl bg-fit bg-no-repeat"
              />
              <div class="py-4 text-center">
                <h4 class="font-semibold text-xl">{image.title}</h4>
                <h5 class="font-light">{image.body}</h5>
              </div>
            </div>
          </div>
        ))
      }
    </div>
  </Section>

  <!-- Gallery -->
  <Section>
    <div class="w-fit mx-auto mb-8">
      <SectionTitle title="projects" />
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {
        galleryImgs.map((img) => (
          <div>
            <a href="/projects/">
              <img
                class="shadow-xl h-auto max-w-full rounded-lg"
                src={img.img}
                alt={img.alt}
              />
            </a>
          </div>
        ))
      }
    </div>
  </Section>

  <!-- contact -->

  <Section bgClr="bg-gray-600" textClr="text-white">
    <div class="w-fit mx-auto mb-8">
      <SectionTitle title="get in touch" />
      <p class="mt-8 font-light px-8">Let's connect! get in touch</p>
    </div>

    <form action="#" class="max-w-lg mx-auto space-y-8">
      <div>
        <label for="email" class="block mb-2 text-sm font-medium text-gray-900"
          >Email</label
        >
        <input
          type="email"
          id="email"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded focus:border-yellow-500 block w-full p-2"
          placeholder="name@gmail.com"
          required
        />
      </div>

      <div>
        <label
          for="subject"
          class="block mb-2 text-sm font-medium text-gray-900">Email</label
        >
        <input
          type="text"
          id="subject"
          class="shadow-sm bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded focus:border-yellow-500 block w-full p-2"
          placeholder="name@gmail.com"
          required
        />
      </div>

      <div class="sm:col-span-2">
        <label
          for="subject"
          class="block mb-2 text-sm font-medium text-gray-900"
          >Your message</label
        >
        <textarea
          class="block p-2 w-full text-sm text-gray-900 bg-gray-50 rounded shadow border border-gray-300"
          placeholder="Leave a comment..."></textarea>
      </div>

      <button
        type="submit"
        class="py-3 px-5 text-sm font-medium text-center text-white rounded-lg bg-yellow-500 hover:bg-yellow-600 sm:w-fit"
        >Send message</button
      >
    </form>
  </Section>

  <!-- cta -->
  <section>
    <div class="bg-cta bg-cover bg-no-repeat">
      <div class="p-32 grid place-items-center">
        <Button
          classes="px-4 py-2 w-32 md:w-52 shadow-xl rounded bg-yellow-500 hover:bg-yellow-600 text-white"
        >
          Get a quote
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
